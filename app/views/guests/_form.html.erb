<%= form_with(model: guest, local: true) do |form| %>
  <% if guest.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(guest.errors.count, "error") %> prohibited this guest from being saved:</h2>

      <ul>
      <% guest.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :cellphone %>
    <%= form.text_field :cellphone %>
  </div>

  <div class="field">
    <%= form.label :birthday %>
    <%= form.date_select :birthday %>
  </div>

  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location %>
  </div>

  <div class="field">
    <%= form.label :confirmation_token %>
    <%= form.text_field :confirmation_token %>
  </div>

  <div class="field">
    <%= form.label :confirmed_at %>
    <%= form.date_select :confirmed_at %>
  </div>

  <div class="field">
    <%= form.label :events %>
    <%= select("guest","event_id",current_inviter.events.all.collect {|p| [ p.name, p.id ] }, {prompt: 'Select Event'}) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
