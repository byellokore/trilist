<p id="notice"><%= notice %></p>

<h1>Guests</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Cellphone</th>
      <th>Birthday</th>
      <th>Location</th>
      <th>Confirmation token</th>
      <th>Confirmed at</th>
      <th>Event</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guests.each do |guest| %>
      <tr>
        <td><%= guest.name %></td>
        <td><%= guest.email %></td>
        <td><%= guest.cellphone %></td>
        <td><%= guest.birthday %></td>
        <td><%= guest.location %></td>
        <td><%= guest.confirmation_token %></td>
        <td><%= guest.confirmed_at %></td>
        <td><%= guest.event %></td>
        <td><%= link_to 'Show', guest %></td>
        <td><%= link_to 'Edit', edit_guest_path(guest) %></td>
        <td><%= link_to 'Destroy', guest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

