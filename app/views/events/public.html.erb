<% unless @event.nil? %>
<div class="container-fluid">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Evento:</strong>
    <%= @event.name %>
  </p>
<!--  <div class="d-flex">-->
<!--      <div class="table-responsive">-->
    <table class="table table-sm" id="list_table_public" data-target="checkin.eventId" data-value="<%=@event.id %>">
      <thead>
      <th scope="col">#</th>
      <th scope="col">Convidado</th>
      <th scope="col">Promoter</th>
      </thead>
      <tbody>
      <% @event.guests.each do |guest| %>
        <tr>
          <td><%= "#{@event.id}#{guest.id}" %></td>
          <td><%= "#{guest.name} #{guest.surname}" %></td>
          <td><%= partner_name(@event, guest) unless guest.partner_id.nil?  %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
<!--      </div>-->
<!--  </div>-->
</div>
<% else %>
<span class="badge badge-warning"><%= (t :no_event_here) %></span>
<% end %>


