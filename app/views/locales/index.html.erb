<p id="notice"><%= notice %></p>

<h1>Meus Locais</h1>
<div class="table-responsive d-flex">
<table class="table-sm">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>City</th>
      <th>Zip code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locales.each do |locale| %>
      <tr>
        <td><%= locale.name %></td>
        <td><%= locale.address %></td>
        <td><%= locale.city %></td>
        <td><%= locale.zip_code %></td>
        <td><%= link_to 'Detalhes', locale %></td>
        <td><%= link_to (t :edit), edit_locale_path(locale) %></td>
        <td><%= link_to (t :destroy), locale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'Criar Local', new_locale_path %>
