<p id="notice"><%= notice %></p>

<h1>Promoters</h1>
<div class="table-responsive d-flex">
<table class="table-responsive">
  <thead>
    <tr>
      <th>Id</th>
      <th>Email</th>
      <th>Nome</th>
      <th>Telefones</th>
      <th>Senha</th>
      <th>Ativo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @partners.each do |partner| %>
      <tr>
        <td><%= partner.id %></td>
        <td><%= partner.email %></td>
        <td><%= partner.name %></td>
        <td><%= partner.phone_numbers %></td>
        <td><%= partner.password %></td>
        <td><%= "Ativo" unless !partner.active %></td>
        <td><%= link_to 'Editar', edit_partner_path(partner) %></td>
        <td><%= link_to 'Remover', partner, method: :delete, data: { confirm: 'Tem Certeza' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'Novo Promoter', new_partner_path %>
